{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["version", "selector", "strategy", "ops"],
  "properties": {
    "version": { "type": "integer", "const": 1 },
    "selector": {
      "type": "object",
      "properties": {
        "query": { "type": "string" },
        "include": { "type": "array", "items": { "type": "string" } },
        "exclude": { "type": "array", "items": { "type": "string" } },
        "has_files": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "strategy": {
      "type": "object",
      "required": ["mode", "plan", "concurrency"],
      "properties": {
        "mode": { "type": "string", "enum": ["pr", "direct"] },
        "plan": { "type": "boolean" },
        "concurrency": { "type": "integer", "minimum": 1, "maximum": 50 },
        "pr": {
          "type": "object",
          "properties": {
            "branch": { "type": "string" },
            "title": { "type": "string" },
            "reviewers": { "type": "array", "items": { "type": "string" } },
            "labels": { "type": "array", "items": { "type": "string" } },
            "bodyTemplate": { "type": "string" },
            "bodyTemplatePath": { "type": "string" }
          },
          "additionalProperties": true
        },
        "issue": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "title": { "type": "string" },
            "labels": { "type": "array", "items": { "type": "string" } },
            "bodyTemplate": { "type": "string" },
            "bodyTemplatePath": { "type": "string" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "ops": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["use"],
        "properties": {
          "use": { "type": "string" },
          "with": { "type": "object" },
          "pr": { "type": "object" },
          "issue": { "type": "object" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
